# Required release references (usually from CD pipeline output)
BACKEND_IMAGE=ghcr.io/your-org/motorsport-api-backend:latest
FRONTEND_IMAGE=ghcr.io/your-org/motorsport-api-frontend:latest

# Runtime and network
FRONTEND_PORT=8080
DJANGO_ALLOWED_HOSTS=api.example.com,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://app.example.com,https://api.example.com
CORS_ALLOWED_ORIGINS=https://app.example.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_ALL_ORIGINS=False

# Django security
DJANGO_SECRET_KEY=replace-with-a-very-long-random-secret
DJANGO_LOG_LEVEL=INFO
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SESSION_COOKIE_SECURE=True
DJANGO_CSRF_COOKIE_SECURE=True
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True
DJANGO_USE_X_FORWARDED_PROTO=True
DJANGO_USE_X_FORWARDED_HOST=True
JWT_AUTH_COOKIE_SECURE=True

# Database
POSTGRES_DB=motorsport_api
POSTGRES_USER=motorsport
POSTGRES_PASSWORD=replace-with-strong-password

# Optional API process tuning
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=60
