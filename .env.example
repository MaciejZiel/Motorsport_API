DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=True
DJANGO_ENV=development
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_LOG_LEVEL=INFO

# Security defaults (set to production-safe values in real deployments)
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=False
DJANGO_SECURE_HSTS_PRELOAD=False
DJANGO_USE_X_FORWARDED_PROTO=False
DJANGO_USE_X_FORWARDED_HOST=False

# API throttling (global + auth endpoint scopes)
API_THROTTLE_ANON_RATE=120/minute
API_THROTTLE_USER_RATE=300/minute
AUTH_LOGIN_THROTTLE_RATE=20/minute
AUTH_REFRESH_THROTTLE_RATE=30/minute
AUTH_REGISTER_THROTTLE_RATE=10/minute
AUTH_LOGOUT_THROTTLE_RATE=30/minute

# JWT lifetime and rotation policy
JWT_ACCESS_TOKEN_MINUTES=10
JWT_REFRESH_TOKEN_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True
JWT_UPDATE_LAST_LOGIN=False

# CORS for separate frontend dev server (React/Angular)
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:4200,http://127.0.0.1:4200,http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=False
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:5173

# DB mode: sqlite (default) or postgresql
DJANGO_DB_ENGINE=sqlite

# Optional single URL for PostgreSQL
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/motorsport_api

# PostgreSQL credentials (used when DJANGO_DB_ENGINE=postgresql)
POSTGRES_DB=motorsport_api
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_CONN_MAX_AGE=60

# Frontend Nginx upstream for /api/* in Docker compose
FRONTEND_API_UPSTREAM=http://api:8000
