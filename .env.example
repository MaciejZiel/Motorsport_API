DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_LOG_LEVEL=INFO

# CORS for separate frontend dev server (React/Angular)
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:4200,http://127.0.0.1:4200,http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=False
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:5173

# DB mode: sqlite (default) or postgresql
DJANGO_DB_ENGINE=sqlite

# Optional single URL for PostgreSQL
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/motorsport_api

# PostgreSQL credentials (used when DJANGO_DB_ENGINE=postgresql)
POSTGRES_DB=motorsport_api
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_CONN_MAX_AGE=60
